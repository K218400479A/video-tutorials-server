<div class="container">

    <main>
        <h1 class="text-center">Courses</h1>
        <section>
            <a href="/create" class="btn btn-warning ">Create Course</a>
            {{!-- <form class="search float-right">
                <label>Search: </label>
                <input type="text">
                <input type="submit" class="btn btn-info" value="Search">
            </form> --}}
        </section>

        <div class="container mt-3">
            <div class="row ">
                <div class="card-deck d-flex justify-content-center">
                    {{#each videos}}
                    <div class="card mb-4">
                        {{!-- <img class="card-img-top" src="{{imgURL}}" alt="Card image cap" width="400"> --}}
                        <iframe class="card-iframe-top" height="56%" src="{{imgURL}}" title="YouTube video player"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                        <div class="card-body">
                            <h4 class="card-title">{{title}}</h4>
                        </div>
                        <div class="card-footer">
                            <a href="/details/{{id}}"><button type="button" class="btn btn-info">Details</button></a>
                            {{!-- <small class="float-right">{{createdAt}}</small> --}}
                        </div>
                    </div>
                    {{else}}
                    <h3 class="text-center">No courses...</h3>
                    {{/each}}
                </div>
            </div>
        </div>
    </main>

</div>



